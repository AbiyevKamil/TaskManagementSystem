@model TaskManagementSystem.Models.AddTaskModel
@{
    ViewBag.Title = "AddTask";
}

<link href="~/Content/Form.css" rel="stylesheet" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<div class="body-container full-height-container">
    <div class="form-container">
        <h2 class="form-header">Add New Task</h2>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="inputs-container">
                <div class="input-container">
                    @Html.LabelFor(model => model.Title, new { @class = "" })
                    @Html.EditorFor(model => model.Title)
                    @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                </div>
                <div class="input-container">
                    @Html.LabelFor(model => model.Description, new { @class = "" })
                    @Html.EditorFor(model => model.Description, new { @class = "" })
                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                </div>
                <div class="input-container">
                    @Html.LabelFor(model => model.EndDate, new { @class = "" })
                    @Html.EditorFor(model => model.EndDate, new { @class = "" })
                    @Html.ValidationMessageFor(model => model.EndDate, "", new { @class = "text-danger" })
                </div>
                <div class="dropdown-container">
                    @Html.LabelFor(model => model.WorkerId, new { @class = "" })
                    @Html.DropDownList("WorkerId", null, htmlAttributes: new { @class = "" })
                    @Html.ValidationMessageFor(model => model.WorkerId, "", new { @class = "text-danger" })
                </div>
                <div class="check-container">
                    @Html.CheckBoxFor(model => model.IsPublic, new { @class = "" })
                    @Html.LabelFor(model => model.IsPublic, new { @class = "" })
                </div>
                <div class="summary-container">
                    @Html.ValidationSummary(true, "", new { @class = "" })
                </div>
                <input class="submit-btn" type="submit" value="Add" />
            </div>
        }
        <p class="link-container">
            @Html.ActionLink("Back to Dashboard", "Dashboard", "Manager", new { }, new { @class = "link" })
        </p>
    </div>
</div>
