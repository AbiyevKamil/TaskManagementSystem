@model TaskManagementSystem.Models.LoginModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_FormLayout.cshtml";
}

<div class="form-container">
    <h2 class="form-header">Login</h2>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="inputs-container">
            <div class="input-container">
                @Html.LabelFor(model => model.Email, new { @class = "" })
                @Html.EditorFor(model => model.Email)
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
            <div class="input-container">
                @Html.LabelFor(model => model.Password, new { @class = "" })
                @Html.PasswordFor(model => model.Password, new { @class = "" })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
            <div class="check-container">
                @Html.CheckBoxFor(model => model.RememberMe)
                @Html.LabelFor(model => model.RememberMe)
            </div>
            <div class="summary-container">
                @Html.ValidationSummary(true, "", new { @class = "" })
            </div>
            <input class="submit-btn" type="submit" value="Login" />
        </div>
    }
    <p class="link-container">
        Don't you have an account? @Html.ActionLink("Register", "Register", "Account", new { }, new { @class = "link" })
    </p>
</div>
