@model TaskManagementSystem.Models.ResetModel
@{
    ViewBag.Title = "ResetPassword";
    Layout = "~/Views/Shared/_FormLayout.cshtml";
}

<div class="form-container">
    <h2 class="form-header">Login</h2>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="inputs-container">
            <div class="input-container">
                @Html.LabelFor(model => model.Password, new { @class = "" })
                @Html.PasswordFor(model => model.Password, new { @class = "" })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
            <div class="input-container">
                @Html.LabelFor(model => model.RePassword, new { @class = "" })
                @Html.PasswordFor(model => model.RePassword, new { @class = "" })
                @Html.ValidationMessageFor(model => model.RePassword, "", new { @class = "text-danger" })
            </div>
            <div class="summary-container">
                @Html.ValidationSummary(true, "", new { @class = "" })
            </div>
            <input class="submit-btn" type="submit" value="Login" />
        </div>
    }
</div>


